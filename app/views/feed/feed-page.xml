<Page id="page"  navigatingTo="onNavigatedTo">
    <ActionBar class="action-bar" title="What's New" />

    <ListView id="feed" items="{{ content }}" itemTemplateSelector="typeOfContent">
        <ListView.itemTemplates>
            <template key="NEWS">
                <StackLayout>
                    <GridLayout class="card-container" rows="auto, auto, auto, auto, auto, 1, auto" columns="auto, *">
                        <Image row="0" class="card-icon-img" rowSpan="2" src="{{ icon || '~/imgs/wsutc-logo-v2.png' }}" />
                        <Label col="1" class="heading-info">
                            <FormattedString>
                                <Span class="heading-name" text="{{ staff }}" />
                                <Span text="  " />
                                <Span fontSize="12" class="fas type" text="&#xf0da;  " />
                                <Span class="type" text="{{ area }}" />
                            </FormattedString>
                        </Label>
                        <Label colSpan="2" rowSpan="2"  margin="16" verticalAlignment="middle" horizontalAlignment="right" class="fas" text="&#xf0c1;" />
                        <Label col="1" row="1" class="posted-time" text="{{ timestamp }}" />
                        <Image class="card-img" row="2" col="0" colSpan="2" src="{{ image }}" />
                        <Label row="3" class="card-title-text" colSpan="2" text="{{ title }}" />
                        <Label row="4" colSpan="2" class="card-description-text" text="{{ description }}" />

                        <StackLayout row="5" colSpan="2" class="card-divider" />

                        <GridLayout row="6" colSpan="2" class="card-time-text" margin="16" columns="*, *" height="auto">
                            <Label textAlign="center">
                                <FormattedString>
                                    <Span class="far" text="&#xf5c2;  " />
                                    <Span text="17" />
                                </FormattedString>
                            </Label>
                            <Label col="1">
                                <FormattedString>
                                    <Span class="far" text="&#xf59a;  " />
                                    <Span text="22" />
                                </FormattedString>
                            </Label>
                            <!-- <Label col="2">
                                <FormattedString>
                                    <Span class="far" text="&#xf073;  " />
                                    <Span text="{{ date }}" />
                                </FormattedString>
                            </Label> -->
                        </GridLayout>
                    </GridLayout>
                </StackLayout>
            </template>

            <template key="EVENT">
                <StackLayout>
                    <GridLayout class="card-container" rows="auto, auto, auto, auto, auto, 1, auto" columns="auto, *">
                        <Image row="0" class="card-icon-img" rowSpan="2" src="{{ icon || '~/imgs/wsutc-logo-v2.png' }}" />
                        <Label col="1" class="heading-info">
                            <FormattedString>
                                <Span class="heading-name" text="{{ staff }}" />
                                <Span text="  " />
                                <Span fontSize="12" class="fas type" text="&#xf0da;  " />
                                <Span class="type" text="{{ area }}" />
                            </FormattedString>
                        </Label>
                        <Label col="1" row="1" class="posted-time" text="{{ timestamp }}" />
                        <Image class="card-img" row="2" col="0" colSpan="2" src="{{ image }}" />
                        <Label row="3" class="card-title-text" colSpan="2" text="{{ title }}" />
                        <Label row="4" colSpan="2" class="card-description-text" text="{{ description }}" />

                        <StackLayout row="5" colSpan="2" class="card-divider" />

                        <GridLayout row="6" colSpan="2" class="card-time-text" margin="16" columns="*, *, *" height="auto">
                            <Label>
                                <FormattedString>
                                    <Span class="fas" text="&#xf3c5;  " />
                                    <Span text="{{ location }}" />
                                </FormattedString>
                            </Label>
                            <Label col="1">
                                <FormattedString>
                                    <Span class="far" text="&#xf017;  " />
                                    <Span text="{{ time }}" />
                                </FormattedString>
                            </Label>
                            <Label col="2">
                                <FormattedString>
                                    <Span class="far" text="&#xf073;  " />
                                    <Span text="{{ date }}" />
                                </FormattedString>
                            </Label>
                        </GridLayout>
                    </GridLayout>
                </StackLayout>
            </template>

        </ListView.itemTemplates>
    </ListView>
</Page>