<Page loaded="onLoaded">
	<ActionBar class="action-bar" title="Create Account" />

	
	<StackLayout class="main-container">
        <Label class="heading" text="Register" />

        <Label class="input-heading" text="Full Name" />
        <Label class="{{ nameError ? 'error-text visible' : 'error-text collapsed' }}" text="Name is required!" />
        <TextField class="register-input" text="{{ name }}" />

        <Label class="input-heading" text="Email" />
        <Label class="{{ emailError ? 'error-text visible' : 'error-text collapsed' }}" text="Email is required!" />
        <TextField class="register-input" text="{{ email }}" keyboardType="email" />

        <Label class="input-heading" text="Password" />
        <Label class="{{ passwordError ? 'error-text visible' : 'error-text collapsed' }}" text="Password is required!" />
        <TextField class="register-input" text="{{ password }}" secure="true" />

        <Label class="input-heading" text="WSU ID" />
         <Label class="{{ wsuIdError ? 'error-text visible' : 'error-text collapsed' }}" text="WSU ID is required!" />
        <TextField class="register-input" text="{{ wsuId }}" keyboardType="number" />

        <Button class="register-button" tap="{{ submit }}" text="Register" />
    </StackLayout>
</Page>