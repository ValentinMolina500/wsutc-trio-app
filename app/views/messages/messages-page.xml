<Page backgroundColor="white" loaded="onLoaded" xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar" title="Messages" />

    <ListView id="feed" items="{{ recentConversations }}" itemTap="{{ onItemTap }}">
        <ListView.itemTemplate>
        <StackLayout height="100%" tap="{{ tap }}">
            <GridLayout rows="auto, auto, 1" columns="auto, *">
                <Image height="65" rowSpan="2" width="65" stretch="aspectFill" borderRadius="100%" src="~/imgs/stassia.jpg" margin="16" />
                <Label col="1" row="0" class="staff-name" text="{{ name }}" />
                <Label col="1" row="1" class="messages-text" text="{{ recentMessage }}" />
                <StackLayout row="2" col="1" class="card-divider" />
                <Label col="1" rowSpan="2" class="date-text" text="{{ date }}" />
            </GridLayout>
        </StackLayout>
        </ListView.itemTemplate>
    </ListView>

    <!-- <Label text="OEOEOEO" /> -->
   
</Page>